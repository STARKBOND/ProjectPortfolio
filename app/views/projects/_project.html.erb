<div id="<%= dom_id project %>">
  <h2>
    <%= project.title %>
  </h2>
  <p>
    <%= project.description %>
    <%= button_to "Show this project", {action: "show", id: project.id}, method: :get, class: "btn btn-primary btn-sm" if current_page?(root_path) or current_page?(projects_path) %>
  </p>
</div>