<div class="p-5 mt-0 mb-4 bg-light rounded-3">
  <div class="container-fluid py">
    <h1 class="display-5 fw-bold">Projects</h1>
      <p>
        <%= "All projects are displayed below." if Project.all.any? %>
        <%= "Looks empty! Projects will be displayed below." if Project.all.empty? %>
      </p>
    <%= button_to "New Project", {action: "new"}, method: :get, class: "btn btn-primary btn-lg" if user_signed_in? %>
  </div>
</div>

<div id="projects">
  <div class="container py-4">
    <div class="row align-items-md-stretch text-left">
      <% @projects.each do |project| %>
        <%= render project %>
      <% end %>
    </div>
  </div>
</div>