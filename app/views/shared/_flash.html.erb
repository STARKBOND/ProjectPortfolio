<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <% if type == "notice" %>
      <div class="mb-0 alert alert-success">
        <%= msg %>
      </div>
    <% end %>
    <% if type == "alert" %>
      <div class="mb-0 alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
<% end %>